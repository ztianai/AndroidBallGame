<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="edu.uw.ztianai.motiongame.StartActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Welcome to Mini Ball Game!"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/extraBall"
        android:text="Number of obstacle balls: "
        android:layout_below="@id/header"
        android:layout_marginTop="70dp"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_toRightOf="@id/extraBall"
        android:layout_marginTop="60dp"
        android:textColor="#ffffff"
        android:width="50dp"
        android:id="@+id/extraBallNum"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START GAME!"
        android:layout_marginTop="100dp"
        android:layout_below="@id/extraBall"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnStart"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rules: \n    Double tap on your ball to change the size of it \n    Tap on the screen to add new obstacle ball\n    Shake your phone to restart the game\n    Default number of obstacle balls is 30\n    Race to the finish line, GOOD LUCK!
        "
        android:layout_marginTop="90dp"
        android:textSize="15sp"
        android:layout_below="@id/btnStart"
        android:textColor="#ffffff"
        />



</RelativeLayout>
